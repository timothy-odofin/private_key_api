    <style>
        .keystore {
            background-color: #2a498d;
            ;
            padding: 10px;
            border-radius: 50px;
            border: none;
            color: white;
            text-decoration: none;
            width: 30%;
            font-size: 13px;
            margin-right: 5%;
        }

        .form-link {
            margin-top: 90px;
        }

        textarea {
            width: 90%;
            border-radius: 10px;
            border: 1px solid grey;
        }

        @media (max-width:760px) {
            header a {
                padding: 20px;
            }
